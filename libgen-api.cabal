common all
    build-depends:    
            base                 ^>= 4.14.3.0
    default-language: Haskell2010
    ghc-options:      -Wall

executable main
    import:           all
    main-is:          Main.hs
    other-modules:    Libgen

    -- other-extensions:
    hs-source-dirs:   app, src

library
    import:           all
    exposed-modules:  Libgen
    hs-source-dirs:   src

Test-Suite tests
    import:           all
    type:             detailed-0.9
    hs-source-dirs:   src, test
    test-module:      Test
    other-modules:    Libgen

